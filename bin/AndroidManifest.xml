<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hu.barbar.bluetoothspplibrary"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="hu.barbar.bluetoothspp.Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity
            android:name="hu.barbar.bluetoothspp.SimpleActivity"
            android:label="@string/app_name" />
        <activity
            android:name="hu.barbar.bluetoothspp.ListenerActivity"
            android:label="@string/title_activity_listener" >
        </activity>
        <activity
            android:name="hu.barbar.bluetoothspp.AutoConnectActivity"
            android:label="@string/title_activity_auto_connect" >
        </activity>
        <activity
            android:name="hu.barbar.bluetoothspp.DeviceListActivity"
            android:label="@string/title_activity_device_list" >
        </activity>
        <activity
            android:name="hu.barbar.bluetoothspp.TerminalActivity"
            android:label="@string/title_activity_terminal" >
        </activity>

        <activity android:name="hu.barbar.bluetoothspp.library.DeviceList" />
        
    </application>

</manifest>
